#!/usr/bin/env python

def options(opt):
	return

def configure(conf):
	return

def build(bld):
	source = [
		'../../../tier1/interface.cpp',
		'../frame_encoder/voice_codec_frame.cpp',
		'voiceencoder_speex.cpp',
		'../../../public/tier0/memoverride.cpp'
	]

	includes = [
		'source/libspeex',
		'../frame_encoder',
		'../..',
		'../../audio/public'
	]

	libs = [
		'tier0',
		'tier1',
		'interfaces',
		'vstdlib',
		'speex'
	]

	bld.shlib(
		target = 'vaudio_speex',
		features = 'c cxx',
		source = source,
		includes = includes,
		use = libs,
		install_path = bld.env.LIBDIR,
		subsystem = bld.env.MSVC_SUBSYSTEM
	)
