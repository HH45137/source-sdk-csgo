#!/usr/bin/env python

def options(opt):
	return

def configure(conf):
	return

def build(bld):
	source = [
		'qhMath.cpp',
		'qhMemory.cpp',
		'qhHalfEdge.cpp',
		'qhConvex.cpp',	
		'qhMass.cpp'
	]

	includes = [
		'../../public/quickhull'
	]

	libs = []

	bld.stlib(
		target = 'quickhull',
		features = 'c cxx',
		source = source,
		includes = includes,
		use = libs,
		subsystem = bld.env.MSVC_SUBSYSTEM
	)
