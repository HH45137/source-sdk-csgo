#!/usr/bin/env python

def options(opt):
	return

def configure(conf):
	conf.env.append_unique('DEFINES', ['TIER1_STATIC_LIB'])

def build(bld):
	source = [
		'adler32.c',
		'compress.c',
		'crc32.c',
		'deflate.c',
		'gzclose.c',
		'gzlib.c',
		'gzread.c',
		'gzwrite.c',
		'inflate.c',
		'infback.c',
		'inftrees.c',
		'inffast.c',
		'trees.c',
		'uncompr.c',
		'zutil.c'
	]

	includes = []

	libs = []

	bld.stlib(
		target = 'z',
		features = 'c',
		source = source,
		includes = includes,
		use = libs,
		subsystem = bld.env.MSVC_SUBSYSTEM
	)
