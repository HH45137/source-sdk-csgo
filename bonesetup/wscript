#!/usr/bin/env python

def options(opt):
	return

def configure(conf):
	return

def build(bld):
	source = [
		'bone_setup.cpp',
		'bone_ik.cpp',
		'bone_utils.cpp',
		'bone_decode.cpp',
		'bone_constraints.cpp'
	]

	includes = [
		'../public',
		'../public/tier0',
		'../public/tier1'
	]

	libs = []

	bld.stlib(
		target = 'bonesetup',
		features = 'c cxx',
		source = source,
		includes = includes,
		use = libs,
		subsystem = bld.env.MSVC_SUBSYSTEM
	)
